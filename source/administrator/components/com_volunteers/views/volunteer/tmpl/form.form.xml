<?xml version="1.0" encoding="utf-8"?>
<form
        validate="true"
        serverside_validate="true"
>
    <fieldset name="basic_configuration"
              label="COM_VOLUNTEERS_VOLUNTEER_BASIC"
              description="COM_VOLUNTEERS_VOLUNTEER_BASIC_DESC"
    >

        <field name="firstname" type="text" class="inputbox form-control"
               size="150" label="COM_VOLUNTEERS_FIRSTNAME"
               description="COM_VOLUNTEERS_FIRSTNAME_DESC" required="true" />

        <field name="lastname" type="text" class="inputbox form-control"
               size="150" label="COM_VOLUNTEERS_LASTNAME"
               description="COM_VOLUNTEERS_LASTNAME_DESC" required="true" />

        <field name="slug" type="text" class="inputbox form-control"
               size="150" label="COM_VOLUNTEERS_SLUG"
               description="COM_VOLUNTEERS_SLUG_DESC" required="true" />

        <field name="country" type="text" class="inputbox form-control"
               size="150" label="COM_VOLUNTEERS_COUNTRY"
               description="COM_VOLUNTEERS_COUNTRY_DESC" required="true" />

        <field name="city" type="text" class="inputbox form-control"
               size="150" label="COM_VOLUNTEERS_CITY"
               description="COM_VOLUNTEERS_CITY_DESC" />

        <field name="intro" type="textarea" class="inputbox form-control"
               size="150" label="COM_VOLUNTEERS_SHORTINTRO"
               description="COM_VOLUNTEERS_SHORTINTRO_DESC"
               buttons="false" rows="5" cols="80"/>

        <field name="joomlastory" type="textarea" class="inputbox form-control"
               size="150" label="COM_VOLUNTEERS_JOOMLASTORY"
               description="COM_VOLUNTEERS_JOOMLASTORY_DESC"
               buttons="false" rows="5" cols="80"/>

        <field name="image" type="file" class=""
               label="COM_VOLUNTEERS_IMAGE" folder="images/volunteers"
               description="COM_VOLUNTEERS_IMAGE_DESC" accept="image/*" />

        <field name="removeimage" type="checkbox" class=""
               label="COM_VOLUNTEERS_REMOVEIMAGE"
               description="COM_VOLUNTEERS_REMOVEIMAGE_DESC" />

        <field name="email" type="text" class="inputbox form-control"
               size="150" label="COM_VOLUNTEERS_EMAIL"
               description="COM_VOLUNTEERS_EMAIL_DESC"/>

        <field name="github" type="text" class="inputbox form-control"
               size="150" label="COM_VOLUNTEERS_GITHUB"
               description="COM_VOLUNTEERS_GITHUB_DESC"/>

        <field name="facebook" type="text" class="inputbox form-control"
               size="150" label="COM_VOLUNTEERS_FACEBOOK"
               description="COM_VOLUNTEERS_FACEBOOK_DESC"/>

        <field name="twitter" type="text" class="inputbox form-control"
               size="150" label="COM_VOLUNTEERS_TWITTER"
               description="COM_VOLUNTEERS_TWITTER_DESC"/>

        <field name="googleplus" type="text" class="inputbox form-control"
               size="150" label="COM_VOLUNTEERS_GOOGLEPLUS"
               description="COM_VOLUNTEERS_GOOGLEPLUS_DESC"/>

        <field name="linkedin" type="text" class="inputbox form-control"
               size="150" label="COM_VOLUNTEERS_LINKEDIN"
               description="COM_VOLUNTEERS_LINKEDIN_DESC"/>

        <field name="website" type="text" class="inputbox form-control"
               size="150" label="COM_VOLUNTEERS_WEBSITE"
               description="COM_VOLUNTEERS_WEBSITE_DESC"/>

        <field name="notes" type="textarea" class="inputbox form-control"
               size="150" label="COM_VOLUNTEERS_NOTES"
               description="COM_VOLUNTEERS_NOTES_DESC"
               buttons="false" rows="5" cols="80"/>

        <field name="enabled" type="list"
               label="JSTATUS" description="COM_VOLUNTEERS_GROUP_STATE_DESC"
               class="inputbox" size="1" default="1" >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>
    </fieldset>

</form>