<?xml version="1.0" encoding="utf-8"?>
<form
        type="browse"
        show_header="1"
        show_filters="1"
        show_pagination="1"
        norows_placeholder="COM_VOLUNTEERS_COMMON_NORECORDS"
>
    <headerset>
        <header name="volunteer_member_id" type="rowselect" tdwidth="20" sortable="false"/>
        <header name="enabled" type="published" sortable="true" tdwidth="5%" />
        <header name="firstname" type="fieldsearchable" sortable="true"
                buttons="yes" buttonclass="btn" placeholder="COM_VOLUNTEERS_SEARCH_MEMBERS"
        />
        <header name="lastname" type="text" />
        <header name="email" type="text" />
        <header name="date_started" type="text" />
        <header name="date_ended" type="text" />
        <header name="relto" type="text" />
        <header name="reltoname" type="text" />
    </headerset>

    <fieldset name="items">
        <field name="volunteer_member_id" type="selectrow"/>
        <field name="enabled" type="published"/>
        <field name="volunteer_firstname" type="text"
               show_link="true"
               url="index.php?option=com_volunteers&amp;view=member&amp;id=[ITEM:ID]"
        />
        <field name="volunteer_lastname" type="text"
               show_link="true"
               url="index.php?option=com_volunteers&amp;view=member&amp;id=[ITEM:ID]"
        />
        <field name="volunteer_email" type="text" />
        <field name="date_started" type="text" />
        <field name="date_ended" type="text" />
        <field name="reltable" type="text" />
        <field name="reltoname" type="text" />
    </fieldset>
</form>