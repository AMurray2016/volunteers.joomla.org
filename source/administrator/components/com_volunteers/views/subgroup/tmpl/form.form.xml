<?xml version="1.0" encoding="utf-8"?>
<form
        validate="true"
        serverside_validate="true"
>
    <fieldset name="basic_configuration"
              label="COM_VOLUNTEERS_GROUP_BASIC"
              description="COM_VOLUNTEERS_GROUP_BASIC_DESC"
    >

        <field name="title" type="text" class="inputbox form-control input-xxlarge"  labelClass="control-label"
               size="150" label="COM_VOLUNTEERS_TITLE"
               description="COM_VOLUNTEERS_TITLE_DESC" required="true" />

        <field name="group_id" type="volunteers.group" class="inputbox form-control"
               labelClass="control-label"
               label="COM_VOLUNTEERS_GROUP" required="true" />

        <field name="state" type="volunteers.state" class="inputbox form-control"
               labelClass="control-label"
               label="COM_VOLUNTEERS_STATE" required="true" />

        <field name="lead" type="volunteers.volunteer" class="inputbox form-control"
               labelClass="control-label"
               filtergroup="true"
               label="COM_VOLUNTEERS_TEAMLEAD"
               description="COM_VOLUNTEERS_TEAMLEAD_DESC" required="true" />

        <field name="assistant1" type="volunteers.volunteer" class="inputbox form-control"
               labelClass="control-label"
               filtergroup="true"
               label="COM_VOLUNTEERS_ASSISTANTTEAMLEAD"
               description="COM_VOLUNTEERS_ASSISTANTTEAMLEAD_DESC" />

        <field name="assistant2" type="volunteers.volunteer" class="inputbox form-control"
               labelClass="control-label"
               filtergroup="true"
               label="COM_VOLUNTEERS_ASSISTANTTEAMLEAD"
               description="COM_VOLUNTEERS_ASSISTANTTEAMLEAD_DESC" />

        <field name="slug" type="text" class="inputbox form-control input-xxlarge"  labelClass="control-label"
               size="150" label="COM_VOLUNTEERS_SLUG"
               description="COM_VOLUNTEERS_SLUG_DESC" required="true" />

        <field name="email" type="text" class="inputbox form-control input-xxlarge"  labelClass="control-label"
               size="150" label="COM_VOLUNTEERS_EMAIL"
               description="COM_VOLUNTEERS_EMAIL_DESC"/>

        <field name="website" type="text" class="inputbox form-control input-xxlarge"  labelClass="control-label"
               size="150" label="COM_VOLUNTEERS_WEBSITE"
               description="COM_VOLUNTEERS_WEBSITE_DESC"/>

        <field name="acronym" type="text" class="inputbox form-control input-xxlarge"  labelClass="control-label"
               size="10" label="COM_VOLUNTEERS_ACRONYM"
               description="COM_VOLUNTEERS_ACRONYM_DESC"/>

        <field name="description" type="textarea" class="inputbox form-control input-xxlarge"  labelClass="control-label"
               size="150" label="COM_VOLUNTEERS_DESCRIPTION"
               description="COM_VOLUNTEERS_DESCRIPTION_DESC"
               buttons="false" rows="5" cols="80"/>

        <field name="notes" type="textarea" class="inputbox form-control input-xxlarge"  labelClass="control-label"
               size="150" label="COM_VOLUNTEERS_NOTES"
               description="COM_VOLUNTEERS_NOTES_DESC"
               buttons="false" rows="5" cols="80"/>

        <field name="enabled" type="list"
               label="COM_VOLUNTEERS_GROUP_STATE" description="COM_VOLUNTEERS_GROUP_STATE_DESC"
               class="inputbox" size="1" default="1" >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>

        <field name="date_started" type="calendar" class="inputbox form-control"
               label="COM_VOLUNTEERS_DATE_STARTED" description="COM_VOLUNTEERS_DATE_STARTED_DESC"
               format="%d.%m.%Y"
        />

        <field name="date_ended" type="calendar" class="inputbox form-control"
               label="COM_VOLUNTEERS_DATE_ENDED" description="COM_VOLUNTEERS_DATE_ENDED_DESC"
               format="%d.%m.%Y"
        />
    </fieldset>

</form>